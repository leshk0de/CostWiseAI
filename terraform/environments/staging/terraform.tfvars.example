# Staging Environment Configuration Example
# Copy this file to terraform.tfvars and update the values

# Environment Configuration
environment     = "staging"     # Default value, can be omitted
resource_prefix = "costwise"    # Default value, can be omitted

# GCP Project Configuration
project_id = "your-project-id"  # Required
location   = "us-central1"      # Default value, can be omitted

# Resource Naming - These will be auto-generated if not specified
# dataset_id                = "your-custom-dataset-name"
# service_account_id        = "your-custom-sa-name"
# function_source_bucket_name = "your-custom-bucket-name"

# Service Credentials - Fill these in with your actual API keys
service_credentials = {
  "Claude"     = "your-anthropic-api-key",
  "OpenAI"     = "your-openai-api-key",
  "Perplexity" = "your-perplexity-api-key"
}

# API Configuration - Only specify if you need to override the defaults
# api_config = {
#   anthropic_api_url   = "https://api.anthropic.com/v1"
#   openai_api_url      = "https://api.openai.com/v1"
#   perplexity_api_url  = "https://api.perplexity.ai"
# }

# Security Configuration
enable_vpc_connector = true  # Recommended for staging
vpc_connector_name = "your-vpc-connector" # Required since enable_vpc_connector is true
allowed_ip_ranges = ["10.0.0.0/8", "192.168.0.0/16"] # Staging IP allowlist

# Monitoring Configuration
enable_monitoring = true
alert_notification_channels = [
  "projects/your-project/notificationChannels/channel-id-1"
]